{
  "manifest_version": 2,

  "name": "Xola Admin",
  "description": "Utilities for admins of Xola",
  "version": "1.3.1",
  "icons": {
    "128": "icon-128.png"
  },
  "browser_action": {
    "default_popup": "index.html"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+X"
      }
    }
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_scripts/index.js"]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "web_accessible_resources": [
    "content_scripts/reimpersonate.js"
  ]
}
